{
  "id": "io.github.edneyosf.edconv",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.openjdk17"],
  "command": "Edconv",
  "finish-args": [
    "--share=ipc",
    "--device=dri",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "edconv",
      "buildsystem": "simple",
      "build-options": {
        "build-args": [
          "--share=network"
        ],
        "append-path": "/usr/lib/sdk/openjdk17/bin",
        "env": {
          "JAVA_HOME": "/usr/lib/sdk/openjdk17/jvm/openjdk-17",
          "GRADLE_USER_HOME": "/run/build/edconv"
        }
      },
      "build-commands": [
        "/usr/lib/sdk/openjdk17/install.sh",
        "./gradlew composeApp:createReleaseDistributable",
        "cp -r ./composeApp/build/compose/binaries/main-release/app/Edconv/* $FLATPAK_DEST/",
        "install -Dm644 ./scripts/metadata/io.github.edneyosf.edconv.desktop /app/share/applications/io.github.edneyosf.edconv.desktop",
        "install -Dm644 ./assets/io.github.edneyosf.edconv.png /app/share/icons/hicolor/256x256/apps/io.github.edneyosf.edconv.png",
        "install -Dm644 ./scripts/metadata/io.github.edneyosf.edconv.metainfo.xml /app/share/metainfo/io.github.edneyosf.edconv.metainfo.xml"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../../"
        },
        {
          "type": "file",
          "url": "https://services.gradle.org/distributions/gradle-8.9-bin.zip",
          "sha256": "d725d707bfabd4dfdc958c624003b3c80accc03f7037b5122c4b1d0ef15cecab",
          "dest": "./gradle/wrapper/"
        }
      ]
    }
  ]
}
